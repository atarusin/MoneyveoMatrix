@model Core.Interfaces.ISquareMatrixModel
@{
	ViewBag.Title = "Поворот матрицы";
	var tmplTable = "<table class=\"table-bordered\"><tbode>{0}</tbode></table>";
	var tmplRow = "<tr>{0}</tr>";
	var tmplItem = "<td>{0}</td>";
}
<h2>@ViewBag.Title</h2>
<div>
	<div>@Html.Raw(Model.Format(tmplTable, tmplRow, tmplItem))@Html.ActionLink("Сохранить в фаил", "GetFile")</div>
	<div>
		@using (Html.BeginForm("Rotation", "Home", FormMethod.Get, new { enctype = "multipart/form-data" }))
		{
			<button type="submit" class="btn btn-primary active">Повернуть матрицу на +90</button>
		}
	</div>
	<div>
		@using (Html.BeginForm("Create", "Home", FormMethod.Post))
		{
			<input type="text" name="Length" />
			<button type="submit" class="btn btn-default active">Создать матрицу из случайных чисел</button>
		}
	</div>
	<div>
		@using (Html.BeginForm("UploadFromFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			<input type="file" name="file" />
			<button type="submit" class="btn btn-default active">Загрузить матрицу из файла</button>
		}
	</div>
</div>
